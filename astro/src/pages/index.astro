---
import Main from '../layouts/Main.astro';
const profilePicture = "https://i.imgur.com/JPGFE75.jpg";
import Cards from '../components/Cards.astro';
---
<!--component template-->


<Main title="Title">
    <div class="profile">
        <img alt="Name"
             width="100px"
             height="100px"
             class="profile__picture"
             src={profilePicture}/>
        <div class="profile__details">
            <h1>Name</h1>
            <h1>Name 3</h1>
            <h2>Name</h2>
            <p>Name</p>
        </div>
    </div>
    <Cards cards = {[
        {
            title: "card 1",
            gradientFrom: "#ff9a9e",
            gradientTo: "#ff00ac",
            to: "/philosophies",

        },
       {
            title: "Name",
            gradientFrom: "#0985a8",
            gradientTo: "#ff00ac",
            to: "/beyond-tech",

        },
       {
            title: "Name",
            gradientFrom: "#00a102",
            gradientTo: "#ff00ac",
            to: "/work-summary",

        },

    ]}/>
</Main>


<!--CSS-->
<style>
    .profile {
        display: flex;
        align-items: flex-start;
        flex-wrap: wrap;
        padding: 1rem 0 3rem 0;
    }


    .profile__detail {
        flex: 1 0 300px;
    }

    .profile__details > h1 {
        margin-top: 0;
        //color: red;
    }

    .profile__picture {
        border-radius: 50%;
        margin: 0 2rem 1rem 0;
    }
</style>