---
import Main from '../layouts/Main.astro';
const profilePicture = "https://i.imgur.com/JPGFE75.jpg";
---
<!--component template-->


<Main>
    <div class="profile">
        <img alt="Name"
             width="100px"
             height="100px"
             class="profile__picture"
             src={profilePicture}/>
        <div class="profile__details">
            <h1>Name</h1>
            <h1>Name 3</h1>
            <h2>Name</h2>
            <p>Name</p>
        </div>
    </div>
</Main>


<!--CSS-->
<style>
    .profile {
        display: flex;
        align-items: flex-start;
        flex-wrap: wrap;
        padding: 1rem 0 3rem 0;
    }


    .profile__detail {
        flex: 1 0 300px;
    }

    .profile__details > h1 {
        margin-top: 0;
        //color: red;
    }

    .profile__picture {
        border-radius: 50%;
        margin: 0 2rem 1rem 0;
    }
</style>